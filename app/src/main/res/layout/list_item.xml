<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/highscore_item_height"
              android:orientation="horizontal"
              android:weightSum="4"
                >
    <ImageView
        android:layout_width="@dimen/highscore_item_height"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/highscore_icon_padding"
        android:id="@+id/player_icon"
        android:src="@drawable/splash_bitmap"
        android:scaleType="fitCenter"
        />
    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/player_name"
        android:textSize="@dimen/body_text_size"
        android:layout_gravity="center_vertical"
        android:gravity="left|start"
        android:text="kuku"
        android:layout_weight="2"
        />
    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/player_score"
        android:textSize="@dimen/body_text_size"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:gravity="right|end"
        android:text="100"
        />
    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/player_time"
        android:textSize="@dimen/body_text_size"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:gravity="right|end"
        android:text="4:50"
        />
</LinearLayout>
