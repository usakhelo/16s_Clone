<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:id="@+id/welcome_screen"
        android:layout_centerVertical="true"
        android:visibility="gone"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="350dp"
            android:padding="10dp"
            android:src="@drawable/dialog_rect01"
            android:scaleType="fitCenter"
            android:id="@+id/image"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text1"
            android:textSize="30sp"
            android:paddingTop="150dp"
            android:paddingBottom="50dp"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"
            android:text="@string/welcome_text1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/start_button"
            android:layout_below="@id/text1"
            android:layout_centerHorizontal="true"
            android:textSize="30sp"
            android:text="Start!"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:id="@+id/game_screen"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="20sp"
            android:id="@+id/text_score"
            android:text="Score"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textSize="20sp"
            android:id="@+id/text_time"
            android:text="Time"
            />
        <com.sergepogosyan.shishnashki.TileView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#FFF"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/text_time"
            android:id="@+id/game_view"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/game_view"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/button_reset"
            android:text="Reset"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/game_view"
            android:layout_centerHorizontal="true"
            android:id="@+id/button_shuffle"
            android:text="Shuffle"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/game_view"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:id="@+id/button_reverse"
            android:text="Reverse"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:id="@+id/results_screen"
        android:layout_centerVertical="true"
        android:visibility="gone"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="350dp"
            android:padding="10dp"
            android:src="@drawable/dialog_rect01"
            android:scaleType="fitCenter"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text2"
            android:textSize="30sp"
            android:paddingTop="150dp"
            android:paddingBottom="50dp"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"
            android:text="@string/result_text1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/play_again_button"
            android:layout_below="@id/text2"
            android:layout_centerHorizontal="true"
            android:textSize="30sp"
            android:text="Play again"/>
    </RelativeLayout>

</RelativeLayout>
