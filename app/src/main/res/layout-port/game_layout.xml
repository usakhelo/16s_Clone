<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:id="@+id/welcome_screen"
        android:layout_centerVertical="true"
        android:visibility="visible"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/dialog_rect01"
            android:scaleType="fitCenter"
            android:id="@+id/image"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text1"
            android:textSize="30sp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/welcome_text1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/start_button"
            android:layout_marginBottom="40dp"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@id/image"
            android:textSize="30sp"
            android:text="@string/start"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:id="@+id/game_screen"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="20sp"
            android:id="@+id/text_score"
            android:text="@string/score"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textSize="20sp"
            android:id="@+id/text_time"
            android:text="@string/time"
            />
        <com.sergepogosyan.shishnashki.TileView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#FFF"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/text_time"
            android:id="@+id/game_view"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/game_view"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/button_reset"
            android:text="@string/reset"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/game_view"
            android:layout_centerHorizontal="true"
            android:id="@+id/button_shuffle"
            android:text="@string/shuffle"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/game_view"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:id="@+id/button_reverse"
            android:text="@string/reverse"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:id="@+id/result_screen"
        android:layout_centerVertical="true"
        android:visibility="visible"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/dialog_rect01"
            android:scaleType="fitCenter"
            android:id="@+id/image2"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text2"
            android:textSize="30sp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/result_text1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/restart_button"
            android:layout_marginBottom="40dp"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@id/image2"
            android:textSize="30sp"
            android:text="@string/play_again"/>
    </RelativeLayout>

</RelativeLayout>
